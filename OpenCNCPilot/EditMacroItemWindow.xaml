<Window x:Class="OpenCNCPilot.EditMacroItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Macro Item" Height="199.576" Width="257.415" DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <TextBox Height="23" Margin="54,13,10,0" Text="{Binding MacroName}" VerticalContentAlignment="Center" VerticalAlignment="Top"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Margin="10,41,10,35" Text="{Binding Commands}" AcceptsReturn="True"/>
        <Button Content="Ok" Click="ButtonOk_Click" HorizontalAlignment="Right" Margin="0,0,90,10" VerticalAlignment="Bottom" Width="75"/>
        <Button Content="Cancel" Click="ButtonCancel_Click" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75"/>

    </Grid>
</Window>
